<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="whatsapp_multiple_message_wizard_form" model="ir.ui.view">
            <field name="name">whatsapp.multiple.message.wizard.form</field>
            <field name="model">whatsapp.wizard.multiple.contact</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Tin nhắn Zalo">
                    <group>
                        <field name="partner_id"/>
                        <field name="mobile"/>
                        <field name="message" widget="text_emojis"/>
                    </group>
                    <footer>
                        <button name="send_multiple_contact_message" string="Gửi" type="object" class="oe_highlight"
                                icon="fa-comment-o"/>
                        <button name="cancel" string="Hủy" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>


